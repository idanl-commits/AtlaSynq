# AtlaSynq Staging Environment
# Copy to staging.env and fill in values. Never commit staging.env to git.
# Use: docker compose --env-file infra/env/staging.env -f docker-compose.yml up -d

# Same structure as platform/.env
POSTGRES_PASSWORD=
MONGO_PASSWORD=
JWT_SECRET=
JWT_REFRESH_SECRET=
ATLASYNQ_API_KEY=
ANTHROPIC_API_KEY=
ENCRYPTION_KEY=
CORS_ALLOWED_ORIGINS=https://staging.atlasynq.io
# ... (copy remaining vars from platform/.env)

# Feature flags for staging (default OFF)
FEATURE_POLICY_GATEWAY=0
FEATURE_CONTROL_PLANE_AUTH=0
FEATURE_SHADOW_POLICY=0
FEATURE_NEW_SECRET_STORE=0

# Control-plane API (separate DB: control_plane)
CP_DATABASE_URL=postgresql://atlasynq:${POSTGRES_PASSWORD}@db:5432/control_plane
CP_JWT_SECRET=
CP_JWT_ACCESS_TTL=900
